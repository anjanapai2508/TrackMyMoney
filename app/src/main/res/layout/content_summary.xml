<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apai.trackmymoney.SummaryActivity">
<RelativeLayout
    android:layout_width="368dp"
    android:layout_height="495dp"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp">
    <Button
        android:id="@+id/todaysSummary"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Today's Summary"
        android:textColor="#0099CC"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/monthsSummary"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/todaysSummary"
        android:background="#FFFFFF"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginTop="30dp"
        android:text="This Month's Summary"
        android:textColor="#0099CC"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/goBackToMainPageButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/monthsSummary"
        android:background="#FFFFFF"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginTop="30dp"
        android:text="Cancel"
        android:textColor="#0099CC"
        android:layout_centerInParent="true"
         />


</RelativeLayout>
</android.support.constraint.ConstraintLayout>
