<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apai.trackmymoney.CreateNewExpense">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/categoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/categoryTextBox"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/categoryTextBox"
            android:layout_marginTop="27dp"
            android:text="Expense/Income"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <AutoCompleteTextView
            android:id="@+id/categoryTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categoryLabel"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:ems="8" />


        <TextView
            android:id="@+id/merchantLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categoryTextBox"
            android:layout_centerInParent="true"
            android:paddingTop="30dp"
            android:text="Merchant"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <AutoCompleteTextView
            android:id="@+id/merchantsTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/merchantLabel"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:ems="8" />

        <TextView
            android:id="@+id/amountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/merchantsTextBox"
            android:layout_centerInParent="true"
            android:paddingTop="30dp"
            android:text="Amount"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/amountTextBox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amountLabel"
            android:inputType="phone"
            android:paddingTop="30dp" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/amountTextBox"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:background="#FFFFFF"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="SAVE"
            android:textColor="#0099CC" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/submitButton"
            android:layout_marginLeft="160dp"
            android:background="#FFFFFF"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="CANCEL"
            android:textColor="#0099CC" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
